/* pages/books/book.wxss */

swiper {
    width: 100%;
    height: 500rpx;
}

swiper image {
    width: 100%;
    height: 500rpx;
}

.book-container {
    display: flex;
    flex-direction: column;
    margin-top: 20rpx;
    margin-bottom: 40rpx;
    background-color: #fff;
    border-bottom: 1px solid #ededed;
    border-top: 1px solid #ededed;
    padding-bottom: 5px;
}

.book-author-date {
    margin: 10rpx 0 20rpx 10px;
}

.book-author {
    font-size: 28rpx;
    font-weight: 600;
    color: rgb(39, 38, 38);
    margin-bottom: 10px;
    margin-left: 10px;
}

.book-date {
    margin-left: 20rpx;
    vertical-align: middle;
    margin-bottom: 20px;
    font-size: 26rpx;
}

.book-titile {
    font-size: 36rpx;
    font-weight: 600;
    color: #333;
    margin-bottom: 10px;
    margin-left: 10px;
}

.book-image{
    vertical-align: middle;
    width: 60%;
    margin: auto 0;
    margin-bottom: 15px;
    margin-left: 20px;
}

.book-content{
    color: #666;
    font-size: 28rpx;
    margin-bottom: 20rpx;
    margin-left: 20rpx;
    letter-spacing: 2rpx;
    line-height: 40rpx;
}

.book-like{
    font-size: 13px;
    flex-direction: row;
    line-height: 16px;
    margin-left: 10px;
}

.book-add{
  width: 90%;
  margin-top: 20rpx;
  background-color: rgb(37, 146, 132);
  color: #FFF;
}

.book-like-image{
    height: 16px;
    width:16px;
    margin-right: 8px;
    vertical-align: middle;
}
.book-like-font{
    vertical-align: middle;
    margin-right: 20px;
}
