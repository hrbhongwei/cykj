/* pages/home/home.wxss */
swiper {
  width: 100%;
  height: 500rpx;
}

swiper image {
  width: 100%;
  height: 500rpx;
}
.homeBg{
  position: relative;
  font-size: 0;
}
.homeBg .img{
  width: 100%;
}
.content{
  width: calc(100% - 20px);
  position: absolute;
  top: 240px;
  margin: 0 10px;
}
.classification{
  border-radius: 4px;
  box-shadow: 0px 1px 8px 0 #bcbcbc;
  padding: 10px 0 20px;
}
.classification-jump{
  display: inline-block;
  font-size: 14px;
  text-align: center;
  width: 33.3%;
  margin: 0 auto;
}
.classification-icon{
  width: 56px;
  height: 56px; 
  border-radius: 50%;
  text-align: center;
  line-height: 78px;
  margin:10px auto;
}
.classification-icon .img{
  width: 100%;
  height: 100%;
} 
.classKH{
  border-radius: 4px;
  padding: 40px 0 20px;
  text-align: center;
  font-weight: bolder;
  font-size: 28px;
  color: #0d8365
}
.menuFont{
  border-radius: 4px;
  font-size: 12px;
  font-weight: bolder;
  color: #0d8365;
}